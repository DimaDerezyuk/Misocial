mixin card(oneCard)
    figure 
        figcaption 
            img(src=oneCard.img, alt=oneCard.alt)
            p.personal #{oneCard.personal}
            p.price
                sup
                    span.currency #{oneCard.currency}
                b #{oneCard.price} 
                sub
                    if isMonth
                        | /month
                    else
                        | /month
            ul.description
                for item in oneCard.description
                    li #{item}
            a.cta-nav(href=oneCard.hrefBtn) #{oneCard.btn}