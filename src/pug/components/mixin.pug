mixin menu(mainMenu, colorTheme="light")
    .navigation.flex-between.items-center.gap(class=colorTheme)
        .logo 
            a.items-center.malitoplogo(href="index.html")
                img(src="img/mainlogo.svg", alt="логотип сайту")
                span.logotext MISOCIAL
        nav.nav.flex-between.items-center
            ul.toptext(class=colorTheme) 
                for item in mainMenu 
                    li.smalltextlogo 
                        a.getstart(href=item[1]) #{item[0]} 
            a.gav.cta-nav(href="") get started

